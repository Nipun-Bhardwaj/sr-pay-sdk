{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "module": "esnext",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src"]
  }